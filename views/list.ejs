<%- include("header") -%>
<div class="box" id="heading">
  <h1><%=listTitle%></h1>
</div>

<div class="box">
  <ul>
    <% for(let item of items){ %>
    <div class="item">
      <input type="checkbox" />
      <p><%= item %></p>
    </div>
    <% } %>
  </ul>

  <form class="item" action="/" method="post">
    <input
      name="newItem"
      type="text"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="list" value="<%=listTitle%>">+</button>
  </form>
</div>

<%- include("footer") -%>